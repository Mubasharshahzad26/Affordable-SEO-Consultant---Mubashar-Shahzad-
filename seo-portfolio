    <script type="text/javascript">
        // Google Translate Init Function
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
                pageLanguage: 'en',
                includedLanguages: 'en,es,fr,de', // Only show these languages in the dropdown
                layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
                autoDisplay: false // Prevent auto-translation on load
            }, 'google_translate_element');
        }
    </script>
    <!-- Google Translate Script -->
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Navbar Scroll Effect ---
            const navbar = document.querySelector('.navbar');
            const scrollProgress = document.getElementById('scroll-progress');

            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }

                // Update scroll progress bar
                const totalHeight = document.body.scrollHeight - window.innerHeight;
                const scrollPosition = window.scrollY;
                const progress = (scrollPosition / totalHeight) * 100;
                scrollProgress.style.width = progress + '%';
            });

            // --- Hamburger Menu Functionality ---
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('.nav-menu');

            hamburger.addEventListener('click', () => {
                hamburger.classList.toggle('active');
                navMenu.classList.toggle('active');
            });

            document.querySelectorAll('.nav-link').forEach(n => n.addEventListener('click', () => {
                hamburger.classList.remove('active');
                navMenu.classList.remove('active');
            }));

            // --- Animate on Scroll Effect (Intersection Observer) ---
            const animateOnScrollElements = document.querySelectorAll('.animate-on-scroll');
            const observerOptions = {
                root: null, // viewport
                rootMargin: '0px',
                threshold: 0.1 // 10% of element visible
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, observerOptions);

            animateOnScrollElements.forEach(el => observer.observe(el));

            // Apply new animation to specific elements within the combined expertise section
            const animateZoomInElements = document.querySelectorAll('.animate-zoom-in');
            const zoomInObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target); // Unobserve after first animation
                    }
                });
            }, observerOptions);
            animateZoomInElements.forEach(el => zoomInObserver.observe(el));

            // --- Email Contact Link Handling ---
            const emailAddress = 'mubasharshahzad726@gmail.com'; // Corrected email address
            document.querySelectorAll('[id^="email-contact-link"]').forEach(link => { // Use starts with to catch both IDs
                link.href = `mailto:${emailAddress}`;
            });

            // --- Lead Generation Form Submission ---
            const leadForm = document.getElementById('lead-generation-form');
            const messageBox = document.getElementById('messageBox');
            const messageText = document.getElementById('messageText');
            const closeMessageBoxButton = document.getElementById('closeMessageBox');

            leadForm.addEventListener('submit', (event) => {
                event.preventDefault(); // Prevent default form submission

                // Collect form data
                const formData = {
                    name: document.getElementById('client-name').value,
                    email: document.getElementById('client-email').value,
                    websiteUrl: document.getElementById('website-url').value,
                    problemFacing: document.getElementById('problem-facing').value,
                    objectiveAchachieve: document.getElementById('objective-achieve').value,
                    budgetEstimation: document.getElementById('budget-estimation').value
                };

                console.log('Form Submitted!', formData);

                // Show a success message using the custom message box
                showMessage('Thank you for your message! I will get back to you shortly.');

                // Clear the form fields
                leadForm.reset();
            });

            closeMessageBoxButton.addEventListener('click', () => {
                messageBox.classList.remove('show');
            });

            function showMessage(text) {
                messageText.textContent = text;
                messageBox.classList.add('show');
            }

            // --- AI Content Optimizer Logic (Simulated) ---
            const contentInput = document.getElementById('contentInput');
            const optimizeContentButton = document.getElementById('optimizeContentButton');
            const seoSuggestionOutput = document.getElementById('seoSuggestionOutput');
            const suggestionText = document.getElementById('suggestionText');
            const loadingSpinner = seoSuggestionOutput.querySelector('.loading-spinner');

            optimizeContentButton.addEventListener('click', () => {
                const inputText = contentInput.value.trim();
                suggestionText.textContent = ''; // Clear previous suggestion
                loadingSpinner.classList.add('active'); // Show spinner

                // Simulate API call delay and more detailed analysis
                setTimeout(() => {
                    let suggestion = '';
                    let readabilityScore = Math.floor(Math.random() * 40) + 30; // 30-70 range
                    let sentiment = 'neutral';
                    if (inputText.length > 100 && (inputText.toLowerCase().includes('challenge') || inputText.toLowerCase().includes('problem'))) {
                        sentiment = 'negative';
                    } else if (inputText.length > 100 && (inputText.toLowerCase().includes('growth') || inputText.toLowerCase().includes('success'))) {
                        sentiment = 'positive';
                    }

                    if (inputText.length === 0) {
                        suggestion = 'Please enter some content or a keyword idea to get a comprehensive SEO suggestion.';
                    } else {
                        let baseSuggestion = 'Great start! ';
                        if (inputText.length < 150) {
                            baseSuggestion += `Consider expanding your content to at least 150-300 words for better depth.`;
                        } else {
                            baseSuggestion += `Your content has good length.`;
                        }

                        if (inputText.toLowerCase().includes('keyword')) {
                            baseSuggestion += ` Ensure your primary keyword is in the title and first paragraph.`;
                        } else if (Math.random() > 0.5) { // Randomly suggest keyword
                            baseSuggestion += ` Think about incorporating relevant long-tail keywords naturally.`;
                        }

                        if (readabilityScore < 50) {
                            baseSuggestion += ` The readability score is ${readabilityScore} (Flesch-Kincaid scale). Try to simplify complex sentences and use more active voice to improve readability.`;
                        } else {
                            baseSuggestion += ` Readability looks good at ${readabilityScore}! Keep it engaging.`;
                        }

                        if (sentiment === 'positive') {
                            baseSuggestion += ` Your content has a positive tone, which is great for user engagement.`;
                        } else if (sentiment === 'negative') {
                            baseSuggestion += ` The tone seems a bit negative. Consider framing challenges as opportunities.`;
                        }

                        suggestion = baseSuggestion + ` Always remember to optimize for user intent!`;
                    }

                    suggestionText.textContent = suggestion;
                    loadingSpinner.classList.remove('active'); // Hide spinner
                }, 1800); // Simulate slightly longer loading time for "advanced" analysis
            });

            // --- Testimonial Slider/Randomizer ---
            const testimonials = [
                {
                    quote: "Mubashar's expertise was a game-changer. Our organic leads have more than doubled, and we're finally seeing a real ROI from our website. Truly an expert who cares about results.",
                    author: "- CEO, Mammoth Roofing"
                },
                {
                    quote: "The best SEO strategist we've ever worked with. Mubashar's technical audit was incredibly detailed and the strategy was clear and effective. We now rank for keywords we never thought possible.",
                    author: "- Marketing Director, AAA Mobile Tyres"
                },
                {
                    quote: "Mubashar's insights into local SEO are unmatched. Our Google My Business presence exploded, bringing in a consistent stream of new customers. Highly recommended!",
                    author: "- Owner, Local Restaurant Chain"
                },
                {
                    quote: "He quickly grasped the complexities of our niche and delivered a content strategy that significantly boosted our organic traffic and conversions. A true asset!",
                    author: "- Head of Content, SaaS Company"
                },
                {
                    quote: "Professional, responsive, and incredibly effective. Mubashar helped us navigate a major algorithm update with minimal impact and continued to drive growth.",
                    author: "- Digital Marketing Manager, E-commerce Brand"
                }
            ];

            const testimonialQuote = document.getElementById('testimonial-quote');
            const testimonialAuthor = document.getElementById('testimonial-author');
            const testimonialDisplay = document.getElementById('testimonial-display');
            const prevTestimonialBtn = document.getElementById('prevTestimonial');
            const nextTestimonialBtn = document.getElementById('nextTestimonial');

            let currentTestimonialIndex = 0;

            function displayTestimonial(index) {
                testimonialDisplay.classList.remove('active'); // Fade out current
                setTimeout(() => {
                    testimonialQuote.textContent = testimonials[index].quote;
                    testimonialAuthor.textContent = testimonials[index].author;
                    testimonialDisplay.classList.add('active'); // Fade in new
                }, 500); // Wait for fade out
            }

            // Initialize with a random testimonial
            currentTestimonialIndex = Math.floor(Math.random() * testimonials.length);
            displayTestimonial(currentTestimonialIndex);

            nextTestimonialBtn.addEventListener('click', () => {
                currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonials.length;
                displayTestimonial(currentTestimonialIndex);
            });

            prevTestimonialBtn.addEventListener('click', () => {
                currentTestimonialIndex = (currentTestimonialIndex - 1 + testimonials.length) % testimonials.length;
                displayTestimonial(currentTestimonialIndex);
            });

            // --- Newsletter Form Submission ---
            const newsletterForm = document.getElementById('newsletter-signup-form');
            newsletterForm.addEventListener('submit', (event) => {
                event.preventDefault();
                const email = document.getElementById('newsletter-email').value;
                console.log(`Newsletter signup for: ${email}`);
                showMessage('Thank you for subscribing to our newsletter!');
                newsletterForm.reset();
            });


            // --- Light/Dark Mode Toggle ---
            const themeToggle = document.getElementById('themeToggle');
            const themeIcon = document.getElementById('themeIcon');
            const body = document.body;

            // Function to set the theme
            function setTheme(theme) {
                if (theme === 'dark') {
                    body.classList.add('dark-mode');
                    themeIcon.classList.remove('fa-moon');
                    themeIcon.classList.add('fa-sun');
                    localStorage.setItem('theme', 'dark');
                } else {
                    body.classList.remove('dark-mode');
                    themeIcon.classList.remove('fa-sun');
                    themeIcon.classList.add('fa-moon');
                    localStorage.setItem('theme', 'light');
                }
            }

            // Check for saved theme preference or system preference
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                setTheme(savedTheme);
            } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                setTheme('dark'); // Default to dark if system preference is dark
            } else {
                setTheme('light'); // Default to light
            }

            // Toggle theme on button click
            themeToggle.addEventListener('click', () => {
                if (body.classList.contains('dark-mode')) {
                    setTheme('light');
                } else {
                    setTheme('dark');
                }
            });

            // --- Partner Logo Slider ---
            const logoCarousel = document.getElementById('logoCarousel');
            const carouselPrevBtn = document.getElementById('carouselPrev');
            const carouselNextBtn = document.getElementById('carouselNext');
            const initialLogoItems = Array.from(logoCarousel.children); // Get initial logo elements
            const totalLogos = initialLogoItems.length;
            let currentSlide = 0;
            let autoSlideInterval;
            const slideDuration = 3000; // Time per slide in ms

            // Clone logos to create an infinite loop effect. Clone enough to fill at least twice the visible area.
            // Also ensure the clones include the new <strong> tags
            const logosData = [
                { src: "https://placehold.co/100x50/cccccc/000000?text=GlobalTech", name: "GlobalTech Solutions" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=ApexInnov", name: "Apex Innovations" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=QuantumH", name: "Quantum Health" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=Stratton", name: "Stratton Legal" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=Finvest", name: "Finvest Capital" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=DigitalH", name: "Digital Horizon" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=EcoSol", name: "EcoSolutions Pro" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=UrbanLiv", name: "Urban Living Co." },
                { src: "https://placehold.co/100x50/cccccc/000000?text=PeakPerf", name: "Peak Performance Academy" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=AeroDyn", name: "AeroDynamics Inc." },
                { src: "https://placehold.co/100x50/cccccc/000000?text=MediCare", name: "MediCare Solutions" },
                { src: "https://placehold.co/100x50/cccccc/000000?text=EduVerse", name: "EduVerse Learning" }
            ];

            // Clear existing elements to re-populate with clones including text
            logoCarousel.innerHTML = '';

            // Populate carousel with original items and then clones
            // We need to clone enough to ensure smooth continuous scrolling
            const numClones = logosData.length * 2; // Clone the entire set twice for seamless loop
            const fullLogosArray = logosData.concat(logosData, logosData); // Original + 2 copies for infinite effect

            fullLogosArray.forEach(logo => {
                const logoItem = document.createElement('div');
                logoItem.classList.add('logo-item');

                const img = document.createElement('img');
                img.src = logo.src;
                img.alt = `Client Logo ${logo.name}`;

                const strong = document.createElement('strong');
                strong.textContent = logo.name;

                logoItem.appendChild(img);
                logoItem.appendChild(strong);
                logoCarousel.appendChild(logoItem);
            });


            function updateCarouselPosition() {
                // Recalculate itemWidth dynamically as styles might change with theme or responsiveness
                const firstItem = logoCarousel.querySelector('.logo-item');
                if (!firstItem) return; // Exit if no items exist

                const itemWidth = firstItem.offsetWidth +
                                 parseFloat(getComputedStyle(firstItem).marginLeft) +
                                 parseFloat(getComputedStyle(firstItem).marginRight);

                const offset = currentSlide * itemWidth;
                logoCarousel.style.transform = `translateX(-${offset}px)`;

                // Handle infinite loop for auto-sliding:
                // If we've scrolled past the first set of original logos, reset to the beginning of the cloned set
                // We assume `logosData.length` is the count of original distinct logos.
                if (currentSlide >= logosData.length) {
                    logoCarousel.classList.add('sliding'); // Temporarily disable transition
                    currentSlide = 0; // Reset slide index to the first clone
                    logoCarousel.style.transform = `translateX(0px)`;
                    setTimeout(() => {
                        logoCarousel.classList.remove('sliding'); // Re-enable transition
                    }, 50); // Small delay to allow instant snap
                }
            }


            function startAutoSlide() {
                stopAutoSlide(); // Clear any existing interval before starting a new one
                autoSlideInterval = setInterval(() => {
                    currentSlide++;
                    updateCarouselPosition();
                }, slideDuration);
            }

            function stopAutoSlide() {
                clearInterval(autoSlideInterval);
            }

            carouselNextBtn.addEventListener('click', () => {
                stopAutoSlide();
                currentSlide++;
                updateCarouselPosition();
                startAutoSlide(); // Restart auto-slide after manual interaction
            });

            carouselPrevBtn.addEventListener('click', () => {
                stopAutoSlide();
                currentSlide--;
                if (currentSlide < 0) {
                    // If going back from the first original item, jump to the equivalent position in the cloned set
                    logoCarousel.classList.add('sliding');
                    currentSlide = logosData.length -1; // Go to the last original item's index, which is equivalent to the first clone
                    const itemWidth = logoCarousel.querySelector('.logo-item').offsetWidth +
                                 parseFloat(getComputedStyle(logoCarousel.querySelector('.logo-item')).marginLeft) +
                                 parseFloat(getComputedStyle(logoCarousel.querySelector('.logo-item')).marginRight);
                    logoCarousel.style.transform = `translateX(-${currentSlide * itemWidth}px)`;

                    setTimeout(() => {
                        logoCarousel.classList.remove('sliding');
                        updateCarouselPosition(); // Ensure it updates to the correct visual position
                    }, 50);

                } else {
                    updateCarouselPosition();
                }
                startAutoSlide(); // Restart auto-slide after manual interaction
            });


            // Initialize carousel
            updateCarouselPosition();
            startAutoSlide();

            // Recalculate position on window resize
            window.addEventListener('resize', () => {
                stopAutoSlide();
                updateCarouselPosition();
                startAutoSlide();
            });

            // --- Client Perspective Toggle Logic ---
            const servicesButton = document.getElementById('servicesButton');
            const resourcesButton = document.getElementById('resourcesButton');
            const toggleIndicator = document.getElementById('toggleIndicator');

            function updateToggleVisual(activeButton) {
                servicesButton.classList.remove('active');
                resourcesButton.classList.remove('active');
                activeButton.classList.add('active');

                // Move indicator
                if (activeButton === servicesButton) {
                    toggleIndicator.style.transform = 'translateX(0)';
                } else {
                    const buttonWidth = servicesButton.offsetWidth; // Assuming both buttons have same width
                    const padding = parseFloat(getComputedStyle(servicesButton.parentElement).paddingLeft); // Get parent padding
                    toggleIndicator.style.transform = `translateX(${buttonWidth + padding}px)`;
                }
            }

            // Initial state
            updateToggleVisual(servicesButton);

            servicesButton.addEventListener('click', () => {
                updateToggleVisual(servicesButton);
                // In a real application, this would trigger content changes
                console.log('Switched to My Services view');
            });

            resourcesButton.addEventListener('click', () => {
                updateToggleVisual(resourcesButton);
                // In a real application, this would trigger content changes
                console.log('Switched to Client Resources view');
            });

            // Adjust indicator on window resize for responsiveness
            window.addEventListener('resize', () => {
                // Ensure the indicator position is correct if buttons resize
                const activeButton = servicesButton.classList.contains('active') ? servicesButton : resourcesButton;
                updateToggleVisual(activeButton);
            });
        });
    </script>
</body>
</html>
